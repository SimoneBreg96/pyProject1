#:include TipTapToe/TipTapToe.kv
WindowManager:
    MainWindow:
    FuelCost:
    TipTapToe:

<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.2
            orientation: "vertical"
            Button:
                text: "Fuel cost computation"
                on_release:
                    app.root.current = "fuelCost"
                    root.manager.transition.direction = "left"
            Button:
                text: "TipTapToe"
                on_release:
                    app.root.current = "tipTapToe"
                    root.manager.transition.direction = "left"
            Button:
                text: "Another function..."
                on_release:
                    app.root.current = "fuelCost"
                    root.manager.transition.direction = "left"
        BoxLayout:

<FuelCost>:
    name: "fuelCost"
    submit_button: submit_button
    result: result
    distance: distance
    cost: cost
    consumption: consumption
    passengers: passengers
    BoxLayout:
        id: mainBox
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Distance"
            TextInput: 
                text: ""
                id: distance
                multiline: False
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Cost"
            TextInput: 
                text: ""
                id: cost
                multiline: False
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Consumption"
            TextInput: 
                text: ""
                id: consumption
                multiline: False
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Passengers"
            Spinner:
                id: passengers
                text: "1"
                values: ["1","2","3","4","5"]
        BoxLayout:
            id: buttons
            size_hint_y: 0.4
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: submit_button
                    text: "Enter"
                    on_release:
                        root.btn_clk()
                Button:
                    id: clear_button
                    text: "Clear"
                    on_release:
                        root.clear()
        BoxLayout:
            Label:
                id: result
                text: ""
        BoxLayout:
            Button:
                size_hint_y: 0.2
                id: nextWindow
                text: "Home"
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"