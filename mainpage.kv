<MainWindow>:
    submit_button: submit_button
    lbl: result
    inputLabel: inputLabel
    BoxLayout:
        id: mainBox
        orientation: 'vertical'
        BoxLayout:
            id: name
            size_hint_y: 0.2
            Label:
                text: "Input"
            TextInput: 
                text: ""
                id: inputLabel
                multiline: False
        BoxLayout:
            id: buttons
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: submit_button
                    text: "Enter"
                    on_release:
                        root.btn_clk()
                Button:
                    id: clear_button
                    text: "Clear"
                    on_release:
                        root.clear()
        BoxLayout:
            Label:
                id: result
                text: ""