<MainWindow>:
    submit_button: submit_button
    result: result
    distance: distance
    cost: cost
    consumption: consumption
    BoxLayout:
        id: mainBox
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Distance"
            TextInput: 
                text: ""
                id: distance
                multiline: False
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Cost"
            TextInput: 
                text: ""
                id: cost
                multiline: False
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "Consumption"
            TextInput: 
                text: ""
                id: consumption
                multiline: False
        BoxLayout:
            id: buttons
            size_hint_y: 0.4
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: submit_button
                    text: "Enter"
                    on_release:
                        root.btn_clk()
                Button:
                    id: clear_button
                    text: "Clear"
                    on_release:
                        root.clear()
        BoxLayout:
            Label:
                id: result
                text: ""