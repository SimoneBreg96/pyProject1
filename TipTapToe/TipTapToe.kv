<TipTapToe>:
    name: "tipTapToe"
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: startingMsg
            text: "click on the checkerboard to start!"
            size_hint_y: 0.1
            on_release:
                root.disableStartMSG(True)
        Label:
            size_hint_y: 0.05
        GridLayout: 
            cols: 3
            padding: 100
            Button:
                id: r0c0
                text: ""
                on_release:
                    root.assign(0,0)
                    root.printStatus()
                    # root.writeOnCheckerboard(0,0)
            Button:
                id: r0c1
                text: ""
                on_release:
                    root.assign(0,1)
                    root.printStatus()
                    # root.writeOnCheckerboard(0,1)
            Button:
                id: r0c2
                text: ""
                on_release:
                    root.assign(0,2)
                    root.printStatus()
                    # root.writeOnCheckerboard(0,2)
            Button:
                id: r1c0
                text: ""
                on_release:
                    root.assign(1,0)
                    root.printStatus()
                    # root.writeOnCheckerboard(1,0)
            Button:
                id: r1c1
                text: ""
                on_release:
                    root.assign(1,1)
                    root.printStatus()
                    # root.writeOnCheckerboard(1,1)
            Button:
                id: r1c2
                text: ""
                on_release:
                    root.assign(1,2)
                    root.printStatus()    
                    # root.writeOnCheckerboard(1,2)
            Button:
                id: r2c0
                text: ""
                on_release:
                    root.assign(2,0)
                    root.printStatus()
                    # root.writeOnCheckerboard(2,0)
            Button:
                id: r2c1
                text: ""
                on_release:
                    root.assign(2,1)
                    root.printStatus()
                    # root.writeOnCheckerboard(2,1)
            Button:
                id: r2c2
                text: ""
                on_release:
                    root.assign(2,2)
                    root.printStatus()
                    # root.writeOnCheckerboard(2,2)
        Label:
            size_hint_y: 0.1
            id: message
        Label:
            size_hint_y: 0.1
            text: ""
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                id: nextWindow
                text: "Home"
                on_release:
                    root.clear()
                    root.disableStartMSG(False)
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                id: clear
                text: "Restart match"
                on_release:
                    root.clear()