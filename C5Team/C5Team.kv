<C5Team>:
    name: "c5Team"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: clockBtn
                text: "Start"
                on_release:
                    root.start(7*3,1)
            Button:
                id: StopBtn
                text: "Stop"
                on_release:
                    root.stop()
            Button:
                id: ResetBtn
                text: "Reset"
                on_release:
                    root.reset()
        Label:
            id: clockLabel
            font_size: '90sp'
            color: [255/255,165/255,0/255]
        Label:
            id: currentPlayers
            size_hint_y: 0.1
            color: [0.6,0.6,1]
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                background_color: (0,1,0,0.5)
                color: [0,0,0]
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                text: "next turn IN:"
            Label:
            Label:
                background_color: (1,0,0,0.5)
                color: [0,0,0]
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                text: "next turn OUT:"
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: inPlayers
                color: [0,1,0]
            GridLayout: 
                cols: 3
                Label:
                Label:
                    id: pivot
                Label:

                Label:
                    id: leftWing
                Label:
                Label:
                    id: rightWing

                Label:
                Label:
                    id: back
                Label:
            Label:
                id: outPlayers
                color: [1,0,0]
        Button:
            id: Home
            size_hint_y: 0.2
            text: "Home"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"