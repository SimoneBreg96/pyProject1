<C5Team>:
    name: "c5Team"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: clockBtn
                text: "Start"
                on_release:
                    root.start(10,1)
            Button:
                id: StopBtn
                text: "Stop"
                on_release:
                    root.stop()
            Button:
                id: ResetBtn
                text: "Reset"
                on_release:
                    root.reset()
        Label:
            id: clockLabel
            font_size: '10sp'